
<div class="container">
    <a href="/cookie" class="btn btn-primary mt-3">Back</a>
    <h2 class="mt-2 mb-3">Add Cookie</h2>
    {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
    {{/if}}
    {{#if success}}
        <div class="alert alert-success">Cookie created successfully!</div>
    {{/if}}
    <form action="/cookie/add" method="POST">
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="value">Value:</label>
            <textarea class="form-control" id="value" name="value" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Add Cookie</button>
    </form>
</div>
