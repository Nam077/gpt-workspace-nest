
<div class="container">
    <a href="/cookie" class="btn btn-primary mt-3">Back</a>
    <h2 class="mt-2">Update Cookie {{cookie.email}}</h2>
    <!-- views/cookie/edit.hbs -->
    {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
    {{/if}}
    {{#if success}}
        <div class="alert alert-success">Cookie created successfully!</div>
    {{/if}}
    <form action="/cookie/{{cookie.id}}/edit" method="post">
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" name="email" value="{{cookie.email}}" required>
        </div>
        <div class="form-group">
            <label for="value">Value:</label>
            <textarea class="form-control" id="value" name="value" rows="4" required>{{cookie.value}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>

</div>
